apiVersion: v1
kind: Secret
metadata:
  name: logging-loki-s3
  namespace: openshift-logging
stringData:
  access_key_id: {{ obc_secret.resources[0].data.AWS_ACCESS_KEY_ID | b64decode }}
  access_key_secret: {{ obc_secret.resources[0].data.AWS_SECRET_ACCESS_KEY | b64decode }}
  bucketnames: {{ obc_cm.resources[0].data.BUCKET_NAME }}
  endpoint: https://{{ obc_cm.resources[0].data.BUCKET_HOST }}:{{ obc_cm.resources[0].data.BUCKET_PORT }}
